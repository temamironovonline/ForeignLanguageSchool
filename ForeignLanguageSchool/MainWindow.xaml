<Window x:Class="ForeignLanguageSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForeignLanguageSchool"
        mc:Ignorable="d"
        Title="Леарн" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="ЛЕАРН И ЛОГОТИП" VerticalAlignment="Center" Width="150" HorizontalAlignment="Left"></TextBlock>
        <WrapPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Name="adminModeButton" Width="150" Height="20" Content="Режим администратора" Click="adminModeButton_Click"></Button>
            <Button Name="exitAdminModeButton" Width="200" Height="20" Content="Выйти из режима администратора" Visibility="Collapsed" Click="exitAdminModeButton_Click"></Button>
        </WrapPanel>
        
        <Frame Name="frameWindow" Grid.Row="1" NavigationUIVisibility="Hidden">
            
        </Frame>
    </Grid>
</Window>
