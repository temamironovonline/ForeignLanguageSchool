<Window x:Class="ForeignLanguageSchool.PasswordAdminModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForeignLanguageSchool"
        mc:Ignorable="d"
        Title="Режим администратора" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите пароль:" Style="{StaticResource text}"/>
            <PasswordBox Name="passwordText" Width="100" Height="20"></PasswordBox>
            <Button Name="acceptButton" Width="100" Content="Подтвердить" Click="acceptButton_Click" Style="{StaticResource button}"></Button>
        </StackPanel>
    </Grid>
</Window>
