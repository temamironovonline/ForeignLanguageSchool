<Window x:Class="ForeignLanguageSchool.ConfirmDeleteService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForeignLanguageSchool"
        mc:Ignorable="d"
        Title="Подтверждение удаления" Height="200" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Вы уверены, что хотите удалить запись?" Style="{StaticResource text}"></TextBlock>
            <WrapPanel HorizontalAlignment="Center">
                <Button Name="confirmDelete" Content="Да" Style="{StaticResource button}" Width="100" Click="confirmDelete_Click"></Button>
                <Button Name="denyDelete" Content="Нет" Style="{StaticResource button}" Width="100" Click="denyDelete_Click"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
