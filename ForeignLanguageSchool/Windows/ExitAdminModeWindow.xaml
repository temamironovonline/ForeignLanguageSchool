<Window x:Class="ForeignLanguageSchool.ExitAdminModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForeignLanguageSchool"
        mc:Ignorable="d"
        Title="Выход из режима администратора" Height="200" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Вы уверены, что хотите выйти из режима администратора?" Style="{StaticResource text}"></TextBlock>
            <WrapPanel HorizontalAlignment="Center">
                <Button Name="yesButton" Width="100" Content="Подтвердить" Click="yesButton_Click" Style="{StaticResource button}"></Button>
                <Button Name="noButton" Width="100" Content="Отменить" Click="noButton_Click" Style="{StaticResource button}"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
